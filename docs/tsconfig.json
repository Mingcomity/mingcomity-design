{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": ["WebWorker"],
    "paths": {
      "mingcomity-design": ["../packages/mingcomity-design"],
      "@mingcomity-design/components": ["../packages/components"],
      "~/*": ["./.vitepress/vitepress/*"]
    },
    "types": ["../global.d.ts"],
    "jsx": "preserve"
  },
  "include": ["**/*", ".vitepress/**/*"],
  "exclude": ["node_modules"]
}
